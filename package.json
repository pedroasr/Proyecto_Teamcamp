{
    "name": "fastify-sample",
    "version": "0.0.1",
    "description": "Our first API with fastify",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc -p tsconfig-build.json",
        "start": "node dist/main.js",
        "start:dev": "ts-node src/main.ts --inspect=0.0.0.0:9229",
        "start:dev:watch": "nodemon -L src/main.ts --inspect=0.0.0.0:9229 --exec ts-node",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
        "formatTest": "prettier --write \"test/**/*.+(js|jsx|ts|tsx|json)\"",
        "test": "jest --watchAll",
        "test:coverage": "jest --watchAll --coverage",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
        "test-ci": "jest --collect-coverage",
        "publish-code-coverage": "codecov",
        "validate": "npm run lint && npm run test-ci",
        "prepare": "[ \"$NODE_ENV\" = production ] && exit 0;husky install",
        "pretty-quick": "pretty-quick --staged"
    },
    "author": "juanjofp",
    "license": "MIT",
    "devDependencies": {
        "@types/convict": "^6.1.1",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "codecov": "^3.8.2",
        "dotenv": "^16.0.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-filenames": "^1.3.2",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-watch-typeahead": "^1.0.0",
        "mariadb": "^3.0.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.1",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "convict": "^6.2.2",
        "fastify": "^3.27.4",
        "make-promises-safe": "^5.1.0",
        "pino": "^7.9.2",
        "pino-pretty": "^7.6.0"
    }
}
